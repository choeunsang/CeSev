                },

                xAxis: {
                    type: 'category',
                    data: xAxisData
                },
                yAxis: {
                    type: 'value'
                },
                series: [{
                    data: valData,
                    type: 'line'
                    //type: 'bar'
                }]
            });
        });
    }

